# Milestone 6 test case:
# Arrays 

array[3] boolean b3;
array[2] integer i2;

procedure main ()
    integer n;
    b3 b;
    i2 i;
{
    n <- 100;
    i[1] <- 42;
    b[0] <- true;
    b[1] <- false;
    b[2] <- not b[1];
    write "Provide an integer: ";
    read i[0];
    writeln b[1];
    writeln b[0];
    if b[1] or b[2] then
        write "A ";
        write (b[0] or b[1]);
        writeln " champion!";
    fi
    write "Provide another integer: ";
    read i[1];
    i[0] <- i[1];
    write "Just checking: ";
    write i[0];
    writeln ", right.";
}
